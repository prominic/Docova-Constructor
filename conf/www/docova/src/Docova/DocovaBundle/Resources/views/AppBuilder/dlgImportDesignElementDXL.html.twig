<body text="#000000" bgcolor="white" class="dlgBody" SCROLL="no" onload="initDialog();">
	<form method="post" action="" name="_dlgimportDesignElementDXL">
		<input type='hidden' id="dKey" value=''></input>
		<table class="DlgTable" width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr valign="top">
				<td class="DlgContentCell" width="100%">
					<div id="dlgContentNh" style="width: 100%;">
						<table width="100%" border="0" cellspacing="0" cellpadding="0">
							<tr valign="top">
								<td width="100%"><br></td>
							</tr>
							<tr valign="top">
								<td class="txFldLabel" width="100%">
									<table border=0 class="tblFields" style="border-collapse: collapse;"></table>
									<div>
										<table border=0 class="tblFields" style="border-collapse: collapse;">
											<tr>
												<td class="frmLabel" style="width: 140px; vertical-align: top;">{% trans %}Path{% endtrans %}:</td>
												<td style="width: 300;"><input name="Path" value="" onchange="refreshChoices();" id="Path"></td>
											</tr>
											<tr>
												<td class="frmLabel" style="width: 140px; vertical-align: top;">{% trans %}Element Type{% endtrans %}:</td>
												<td style="width: 300;">
													<span id="Type">
														<select name="ElementType" onchange="refreshChoices();" id="ElementType" class="txFld" style="width: 300px;">
															<option selected value="{{ app.request.query.get('Type') }}">{{ app.request.query.get('Type') }}</option>
															{% if app.request.query.get('Type') == 'JavaScriptLibrary' %}<option value="lslibrary">{% trans %}LotusScript Library{% endtrans %}</option>option>{% endif %}
														</select>
													</span>
												</td>
											</tr>
											<tr>
												<td class="frmLabel" style="width: 140px; vertical-align: top;">{% trans %}Element Name{% endtrans %}:</td>
												<td style="width: 300;">
													<select name="Name" id="Name" class="txFld" style="width: 300px;"></select>
												</td>
											</tr>
											<tr>
												<td class="frmLabel" style="width: 140px; vertical-align: top;">{% trans %}Import Options{% endtrans %}:</td>
												<td style="width: 300;">
													<span><input type="checkbox" name="ImportOptions" onchange="refreshChoices();" class="txFld" value="docovadomino" >{% trans %}DOCOVA for Domino{% endtrans %}</span>													
												</td>
											</tr>											
										</table>
									</div>
								</td>
							</tr>
						</table>
					</div>
				</td>
