<script language="JavaScript" type="text/javascript">

var info = {
	"UserName" : "",
	"UserNameAB" : "",
	"UserNameCN" : "",
	"ServiceAgent" : "LibraryServices",
	"UserRoles" : "",
	"HTTP_Referer" : "",
	"Query_String" : "OpenForm",
	"Query_String_Decoded" : "OpenForm",
	"Path_Info_Decoded" : "{{ path('docova_dlgimportdesignelementdxl') }}",
	"ServerName" : "{{ app.request.server.get('HTTP_HOST') }}",
	"ServerUrl" : "{{ app.request.getscheme }}://{{ app.request.server.get('HTTP_HOST') }}",
	"NsfName" : "{{ path('docova_homepage')[1:path('docova_homepage')|length - 2] }}",
	"PortalWebPath" : "{{ url('docova_homepage') }}",
	"PortalNsfName" : "{{ path('docova_homepage')[1:path('docova_homepage')|length - 2] }}",
	"SecureUrl" : "OFF"
};
function getinfovar() {
	return info;
}

function initDialog()
{	
	InitVars(info);	 
	refreshChoices();			
	return;
}

function refreshChoices()
{	
	var path = jQuery("#Path").val();	
	var type = jQuery("#ElementType").val();	
	if(path == "" || type == ""){
		return;
	}
	
	var options = jQuery("input[name=ImportOptions]:checked").map(function(){return $(this).val()}).get().join(",");
	var result = GetDesignElementNames( path, type, options);			
	if(result && Array.isArray(result) && result.length > 0){		
		result.sort();		
		var items = [];		
		items.push('<option value=""></option>');		
		for (var x = 0; x < result.length; x ++) 
		{			
			items.push('<option value="' + result[x] +'">' + result[x] +'</option>');					
		}		
		jQuery("#Name").empty().append(items.join(''));		
	}else{		
		jQuery("#Name").empty();	
	}	
}
</script>
<style type="text/css">
  .ui-progressbar {
    position: relative;
  }
  .progress-label {
    position: absolute;
