		if (objStrictVersioning.prop("checked") && objStrictVersioning.val()=="1" ){
			objAllowRetract.prop("disabled", false);
			objRestrictDrafts.prop("disabled", false);
		}
		else {
			objAllowRetract.prop("checked", false); 
			objRestrictDrafts.prop("checked", false);
			objAllowRetract.prop("disabled", true);
			objRestrictDrafts.prop("disabled", true);
		}

		if (objEnableVersions.prop("checked")){
			objRestrictLiveDrafts.prop("disabled", false);
		}else{
			objRestrictLiveDrafts.prop("disabled", true);		
		}
	}
}
