{% set box = [] %}
{% if panel.getPanelWidgets and panel.getPanelWidgets.count > 0 %}
	{% for widget in panel.getPanelWidgets %}
		{% set box = box|merge({ ('b' ~ widget.getBoxNo) : widget.getWidget }) %}
	{% endfor %}
{% endif %}
	<tr>
		<td tdtype="box" boxnum=1 style="height: 100%; width: 50%;">
			<div class="portlet">
				{% if box['b1'] is defined %}
					{% include 'DocovaBundle:Subform:' ~ box['b1'].getSubformName ~ '.html.twig' with {'widget' : box['b1']} %}
				{% else %}
					{% include 'DocovaBundle:Default:DefaultWidget.html.twig' %}
				{% endif %}
			</div>
		</td>
		<td tdtype="box" boxnum=2 style="height: 100%; width: 50%;">
			<div class="portlet">
				{% if box['b2'] is defined %}
					{% include 'DocovaBundle:Subform:' ~ box['b2'].getSubformName ~ '.html.twig' with {'widget' : box['b2']} %}
				{% else %}
					{% include 'DocovaBundle:Default:DefaultWidget.html.twig' %}
				{% endif %}
			</div>
		</td>
	</tr>
