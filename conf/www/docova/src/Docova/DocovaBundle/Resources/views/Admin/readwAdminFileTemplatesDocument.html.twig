<!DOCTYPE HTML>
<html>
<head>
	<title>{% trans %}View Column{% endtrans %}</title>
	{% include 'DocovaBundle:Admin:sfWebAdminCommonScriptHeader.html.twig'%}
	{% include 'DocovaBundle:Admin:sfWebAdminCommonFields.html.twig' with { 
		'document' : document, 
		'view_name' : view_name, 
		'view_title' : view_title, 
		'mode' :mode,
		'path_info' : path('docova_admin_readdocument', { 'view_name' : view_name, 'doc_id' : document.getId }) 
	} %}
</head>

<body scroll="No">
	<ul class="ui-widget-header actionBar hidetoload">
		<a id="editBtn" href="{{ path('docova_admin_editdocument', { 'view_name' : view_name, 'doc_id' : document.getId }) }}" >{% trans %}Edit{% endtrans %}</a>
		<li id="closeBtn">{% trans %}Close{% endtrans %}</li>
	</ul>
	<div id="frmEmulator" class="hidetoload">
		<div id="divFormContainer">
			<table class="elmContainer" cellspacing="0">
				<tr>
					<td colspan="2" class="firstRw"><h3 class="headings1">{% trans %}Template File Settings{% endtrans %}</h3></td>
				</tr>
				<tr>
					<td class="firstRw">{% trans %}Template file type{% endtrans %}:</td>
					<td class="firstRw">{{ document.getTemplateType }}</td>
				</tr>
				<tr>
					<td>{% trans %}Template name{% endtrans %}:</td>
					<td>{{ document.getTemplateName }}</td>
				</tr>
				<tr>
					<td>{% trans %}Template file attachment{% endtrans %}:</td>
					<td>
						<a href="{{ path('docova_admin_filetemplate', {file_name:document.getFileName} ) }}" target="_blank">{{ document.getFileName }}</a>
					</td>
				</tr>
				<tr>
					<td>{% trans %}Template Version{% endtrans %}:</td>
					<td>{{ document.getTemplateVersion }}</td>
				</tr>
				<tr>
					<td>{% trans %}Template key{% endtrans %}:</td>
					<td>{{ document.getId }}</td>
				</tr>
			</table>
		</div>	
	</div>
</body>
</html>