<script>
	$( "#wfsmRefresh" )
		.button({
			text:false,
			label: "{% trans %}Refresh{% endtrans %}",
			icons: {primary:  "ui-icon-refresh"}
		})
		.click(function( event ) {
			wfSummaryView.objEmbView.Refresh(true,false,true); 
			wfSummaryView.objEmbView.ResetHighlight();
			wfSummaryView.EmbViewReload();
	});
