<script type="text/javascript" src="{{ asset('bundles/docova/js/custom/' ~ widget.getSubformName ~ '.js') }}"></script>
<div class="portlet-header">
	<span class="arial twelve bold">{{ widget.getWidgetName }}</span>
	<button id="wfsmRefresh" class="btn-Refresh"></button>
	<button class="btn-RemoveWidget"></button>
	<button class="btn-AddWidget"></button>
</div>
<span id="wfSummaryItems" style="display: none">
{{ render(controller('DocovaBundle:Default:getSubscribedLibrariesFolders')) }}
</span>
<div style="height: 1.8em; margin-bottom: 5px">
	<span>{% trans %}Library{% endtrans %} 
		<select name="LibraryName" id="LibraryName" onchange="updateSummary(true)">
			<option ></option>
			{{ render(controller("DocovaBundle:User:getSubscribedLibraries", {'output': 'html'})) }}
		</select>
	</span>
	<span style="padding-left: 10px">{% trans %}Folder{% endtrans %} 
		<select name="FolderName" id="FolderName" onchange="updateSummary()"></select>
	</span>
</div>

